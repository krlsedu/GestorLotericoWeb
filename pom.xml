    <build>
        <plugins>
            
            
            <!-- InÃ­cio versionamento de Banco -->
            <!-- User liquibase plugin -->
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.5.1</version>                
                <executions>
                    <execution>
                        <id>1-estrutura</id>
                        <configuration>
                            <propertyFile>liquibase/liquibase.properties</propertyFile>
                            <changeLogFile>liquibase/db-changelog-master.xml</changeLogFile>
                            <diffChangeLogFile>db_versions/db-${buildNumber}-${current.time}-1.postgresql.sql</diffChangeLogFile>
                            <diffTypes> tables, views, columns, indexes, foreignkeys, primarykeys, uniqueconstraints</diffTypes>
                        </configuration>
                        <phase>initialize</phase>                                                                                        
                        <goals>
                            <goal>diff</goal>
                        </goals>
                    </execution>

                    <execution>
                        <id>2-data_tabs_padrao</id>
                        <configuration>
                            <propertyFile>liquibase/liquibase.properties</propertyFile>
                            <changeLogFile>liquibase/db-changelog-master.xml</changeLogFile>
                            <diffChangeLogFile>db_versions/db-${buildNumber}-${current.time}-2.postgresql.sql</diffChangeLogFile>
                            <diffTypes>Data</diffTypes>
                            <diffIncludeObjects>cols_descri,usuarios,entidades,usuarios_entidades</diffIncludeObjects>
                        </configuration>
                        <phase>initialize</phase>                                                                                     
                        <goals>
                            <goal>diff</goal>
                        </goals>
                    </execution>
                    
                    <execution>
                        <id>3-update</id>
                        <configuration>
                            <propertyFile>liquibase/liquibase.properties</propertyFile>
                            <changeLogFile>liquibase/db-changelog-master.xml</changeLogFile>
                            <diffTypes>tables, views, columns, indexes, foreignkeys, primarykeys, uniqueconstraints, Data</diffTypes>
                        </configuration>
                        <phase>initialize</phase>                                                                                            
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>

                    <execution>
                        <id>5-update-final</id>
                        <phase>test</phase>

                        <configuration>
                            <propertyFile>liquibase/liquibase.properties</propertyFile>
                            <changeLogFile>liquibase/db-changelog-master.xml</changeLogFile>
                        </configuration>                                                                                     
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>5-runbatchfile</id>
                        <phase>initialize</phase>   
                        <configuration>
                            <executable>${session.executionRootDirectory}/apgdiff/gera_diffs.bat</executable>
                            <arguments>
                                <argument>db-${buildNumber}-${current.time}-3</argument>
                                <argument>${session.executionRootDirectory}</argument>
                                <argument>${project.artifactId}</argument>
                                <argument>${project.version}</argument>
                                <argument>${buildNumber}</argument>
                                <argument>${current.time}</argument>
                            </arguments>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

